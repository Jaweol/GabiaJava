package practice01;

public class Test3 {

	    // [상자 메서드 : greet]
	    public static void greet(String name) {
	        // [일 처리] : "Hello, 이름" 인사 출력
	        System.out.println("Hello, " + name);
	    }

	    // [사장 메서드 : main]
	    public static void main(String[] args) {
	        // [이름 저장 상자(배열)]
	        String[] names = {"Claire", "Tom", "Sara"};

	        // [이름 꺼내서 반복하는 일꾼 (for-each 반복문)]
	        for (String name : names) {
	            // [상자 메서드 호출] : 꺼낸 이름 하나를 넘겨서 인사시키기
	            greet(name);
	        }
	    }
	}