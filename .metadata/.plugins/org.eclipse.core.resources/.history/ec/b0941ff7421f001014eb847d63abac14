package chapter08;

public class Company extends Employee {

	public static void main(String[] args) {

		Employee emp = new Employee("김지원", 4000);
		emp.work();
		emp.getInfo();

		Manager mgr = new Manager("박관리자", 5000, "영업");
		mgr.work();
		mgr.getInfo();
		mgr.approveLeave("김지원");

		Employee emp2 = new Employee("최팀장" + 5500, "개발");
		emp2.work();
		emp2.getInfo();
		// emp2.approveLeave("김지원");-> 컴파일 에러(객체가 Employee타입이란건 Manager고유?????

	}
}
