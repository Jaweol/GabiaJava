package chapter06;

public class TakeTrans {

	public static void main(String[] args) {

		// 학생 2명 생성(studentJames ,studentTom)
		StdInfo studentJames = new StdInfo("James", 20000);

		StdInfo studentTom = new StdInfo("Tom", 25000);

		// 버스타기(100)
		Bus bus100 = new Bus(100);
		studentJames.takeBus(bus100);
		// studentJames info
		studentJames.showinfo();
		bus100.showinfo();
		System.out.println("------------------------");

		Bus bus101 = new Bus(101);
		studentTom.takeBus(bus101);
		studentTom.showinfo();
		bus101.showinfo();

		studentJames.takeBus(bus101);
		studentJames.showinfo();
		bus101.showinfo();
		System.out.println("-----------------------");

		Subway subwayGreen = new Subway("line2");
		studentTom.takeSubway(subwayGreen);

	}

}
